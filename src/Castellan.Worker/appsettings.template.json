{
  // Minimal Configuration Template for CastellanAI
  // Only 3 required fields - everything else uses intelligent defaults
  // For advanced configuration options, see appsettings.advanced.json

  "Authentication": {
    "Jwt": {
      "SecretKey": "", // REQUIRED: 64+ character secret (or set AUTHENTICATION__JWT__SECRETKEY env var)
      "Issuer": "castellan-security",
      "Audience": "castellan-admin",
      "ExpirationHours": 24
    },
    "AdminUser": {
      "Username": "", // REQUIRED: Your admin username
      "Password": "", // REQUIRED: Your admin password
      "Email": "admin@castellan.security"
    }
  },

  // AI Configuration - Auto-detects Ollama or uses OpenAI
  "LLM": {
    "Provider": "Ollama", // "Ollama" (local, free) or "OpenAI" (requires API key)
    "Model": "llama3.1:8b-instruct-q8_0", // For Ollama
    "Endpoint": "http://localhost:11434",
    "OpenAIModel": "gpt-4o-mini", // For OpenAI
    "OpenAIKey": "" // Set OPENAI_API_KEY env var if using OpenAI
  },
  "Embeddings": {
    "Provider": "Ollama", // "Ollama" (local, free) or "OpenAI" (requires API key)
    "Model": "nomic-embed-text", // For Ollama
    "Endpoint": "http://localhost:11434",
    "OpenAIKey": "" // Set OPENAI_API_KEY env var if using OpenAI
  },

  // Qdrant Vector Database - Uses local Docker instance by default
  "Qdrant": {
    "UseCloud": false,
    "Host": "localhost",
    "Port": 6333,
    "Https": false,
    "Collection": "log_events",
    "VectorSize": 768
  },

  // SignalR Configuration - Frontend reconnection behavior
  "SignalR": {
    "RetryIntervalsMs": [0, 2000, 5000] // Retry intervals: immediate, 2s, then 5s indefinitely
  },

  // All other settings use intelligent defaults
  // To customize notifications, threat intelligence, performance tuning, etc.
  // see appsettings.standard.json or appsettings.advanced.json
}
